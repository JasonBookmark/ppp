// Place your settings in this file to overwrite default and user settings.
{
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 2000,
    "files.associations": {
        "cmakeccompilerid.c": "cpp",
        "exception": "cpp",
        "cstddef": "cpp",
        "filesystem": "cpp",
        "tuple": "cpp",
        "xstring": "cpp"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "./thirdparty/opencv-3.4.3": true,
        "./thirdparty/install_release_x64": true,
        "./thirdparty/install_debug_x64": true,
        "./thirdparty/android-ndk-r15c": true,
        "./thirdparty/sdk-tools-*": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true
    },
    "files.trimTrailingWhitespace": true,
    "editor.codeLens": false,
    "editor.autoIndent": true,
    "python.pythonPath": "C:\\Python27\\python.exe",
    "python.linting.pycodestyleEnabled": true,
    "python.linting.pycodestyleArgs": [
        "--ignore=E501",
        "--max-line-length=100"
    ],
    "prettier.singleQuote": true,
    "prettier.printWidth": 100,
    "cSpell.words": [
        "elmt",
        "emscripten",
        "exif",
        "wasm"
    ],
    "catch2TestExplorer.executables": [
        {
            "name": "Unit Tests Debug",
            "description": "${relDirpath}/",
            "pattern": "{build_*debug*}/libppp/*{_test}*",
            "dependsOn": [
                "Build Debug"
            ]
        },
        {
            "name": "Unit Tests Release",
            "description": "${relDirpath}/",
            "pattern": "{build_*release*}/libppp/*{_test}*"
        }
    ],
    "cmake.buildDirectory": "${workspaceRoot}/build_windows_debug_x64",
    "cmake.installPrefix": "${workspaceRoot}/install_windows_debug_x64",
    "cmake.generator": "ninja",
    "cmake.configureArgs": [],
    "clang-format.executable": "C:/Program Files/LLVM/bin/clang-format.exe",
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Args": [
        "--max-line-length=110"
    ]
}