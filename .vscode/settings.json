// Place your settings in this file to overwrite default and user settings.
{
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 2000,
    "files.associations": {
        "cmakeccompilerid.c": "cpp",
        "exception": "cpp",
        "cstddef": "cpp",
        "filesystem": "cpp",
        "tuple": "cpp"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "./thirdparty/opencv-3.4.3": true,
        "./thirdparty/install_release_x64": true,
        "./thirdparty/install_debug_x64": true,
        "./thirdparty/android-ndk-r15c": true,
        "./thirdparty/sdk-tools-*": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true
    },
    "files.trimTrailingWhitespace": true,
    "editor.codeLens": false,
    "editor.autoIndent": true,
    "python.pythonPath": "C:\\Python27\\python.exe",
    "python.linting.pep8Enabled": true,
    "python.linting.pep8Args": [
        "--ignore=E501",
        "--max-line-length=100"
    ],
    "prettier.singleQuote": true,
    "prettier.printWidth": 100,
    "cSpell.words": [
        "elmt",
        "wasm"
    ],
    "catch2TestExplorer.executables": [
        {
            "name": "Unit Tests Debug",
            "description": "${relDirpath}/",
            "pattern": "{build_*debug*}/libppp/*{_test}*",
            "dependsOn": ["Build Debug"]

        },
        {
            "name": "Unit Tests Release",
            "description": "${relDirpath}/",
            "pattern": "{build_*release*}/libppp/*{_test}*"
        }
    ]
}