{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PPP UT (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build Debug",
            "program": "build_windows_debug_x64/libppp/ppp_test.exe",
            "stopAtEntry": false,
            "externalConsole": false,
            "logging": {
                "traceResponse": true,
                "engineLogging": true,
                "trace": true
            }
        },
        {
            "name": "PPP UT (OSX)",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build Debug",
            "program": "${workspaceFolder}/build_darwin_debug_x64/libppp/ppp_test",
            "stopAtEntry": false,
            "externalConsole": false,
            "logging": {
                "traceResponse": true,
                "engineLogging": true,
                "trace": true
            },
            "MIMode": "lldb",
            "args": [
                "--gtest_filter=*babyTest*"
            ]
        },
        {
            "name": "Python: Build Script",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/build.py",
            "args": [
                "-a", "x64",
                "--build_config=release"
            ]
        },
        {
            "name": "Python: Code Generator",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/scripts/cppgen.py",
            "args": [
                "--path", "libppp",
                "--name", "ComplianceChecker",
                "--namespace", "ppp",
               // "--overwrite-not!"
            ]
        },
        {
            "name": "Debug Ionic",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8100",
            "webRoot": "${workspaceFolder}/webapp",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "*": "${webRoot}/*"
              }
        }
    ]
}