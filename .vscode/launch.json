{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Build Script",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${file}",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        },
        {
            "name": "Start node.js server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/webapp/server.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}/webapp",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "sourceMaps": false
        }
    ]
}