{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "command": "python",
            "type": "process",
            "args": [
                "build.py",
                "-bdebug",
                "--arch_names",
                "x64"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Release",
            "command": "python",
            "type": "process",
            "args": [
                "build.py",
                "-brelease",
                "--arch_names",
                "x64"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Android",
            "command": "python",
            "type": "process",
            "args": [
                "build.py",
                "--arch_names",
                "android",
            ],
            "problemMatcher": []

        },
        {
            "label": "Serve Angular app",
            "command": "cd webapp && npx ionic serve",
            "type": "shell",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}