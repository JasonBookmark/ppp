#pragma once

#define GIT_REPO_PATH "${CMAKE_CURRENT_SOURCE_DIR}"

#ifdef POCO_STATIC
#include <Poco/Path.h>
#include <Poco/File.h>
#else
#include <filesystem>
#endif
#include <string>

inline std::string resolvePath(const std::string &pathStr)
{
#ifdef POCO_STATIC
    return Poco::Path(GIT_REPO_PATH).append(pathStr).toString();
#else
    using namespace std::tr2::sys;
    return (path(GIT_REPO_PATH) / path(pathStr)).string();
#endif
}